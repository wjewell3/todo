<%= form_for @changeset, Routes.todo_path(@conn, :create), fn f -> %>
  <div class="form-group">
    <%= text_input f, :action, placeholder: "Action", class: "form-control" %>
    <%= text_input f, :status, placeholder: "status", class: "form-control" %>
    <%= error_tag f, :action  %>
  </div>

  <%= submit "Save ToDo", class: "btn btn-primary" %>
<% end %>